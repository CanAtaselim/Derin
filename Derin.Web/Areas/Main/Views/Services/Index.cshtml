@{
    List<ServicesVM> services = ViewBag.Services;
}
<section class="ftco-section" style="padding-top:50px; padding-bottom:0px">
    <div class="container">

        <div class="row">
            @foreach (ServicesVM item in services)
            {
                <div class="col-lg-3 d-flex ftco-animate mb-sm-3" data-toggle="modal" data-target="#services@(item.IdServices) " style="cursor:pointer; padding-left:10px; padding-right:10px;">
                    <div class="staff" style="padding-left:12px; padding-right:12px;">
                        <div class="media block-6 services d-block text-center" style="margin-bottom:0px">
                            <div class="icon d-flex justify-content-center align-items-center">
                                <span class="@item.Icon"></span>
                            </div>
                            <div class="media-body p-">
                                <h3 class="heading">
                                    @item.Title
                                </h3>
                                @{
                                    string FullText = item.FullText;
                                    if (item.FullText.Length > 211)
                                    {
                                        var parts = item.FullText.Substring(0, 210).Split(' ');
                                        FullText = string.Join(" ", parts.Take(parts.Length - 1)) + "...";

                                    }
                                    <span>@Html.Raw(FullText)</span> <br />
                                    <span style="color:#00aeef; font-size:12px">daha fazlası için tıklayınız..</span>

                                }
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal fade" id="services@(item.IdServices)" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-body">

                                <div class="staff" style="padding-left:12px; padding-right:12px;">
                                    <div class="media block-6 services d-block text-center" style="margin-bottom:0px">
                                        <div class="icon d-flex justify-content-center align-items-center">
                                            <span class="@item.Icon"></span>
                                        </div>
                                        <div class="media-body p-">
                                            <h3 class="heading">
                                                @item.Title
                                            </h3>
                                            <span>@item.FullText</span> <br />

                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

</section>


<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>
