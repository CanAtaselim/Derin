@{
    AboutUsVM aboutUs = ViewBag.AboutUs;
}
<style>
    .oval {
        text-align: center;
        float: left;
        margin-right: 15px;
    }
</style>

@{
    var base64 = Convert.ToBase64String(aboutUs.Picture);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}

<section class="ftco-section" style="padding-top:50px">
    <div class="container">
        <div class="row d-md-flex">
            <div class="col-md-5 ftco-animate img about-image order-md-last">
                <img align="middle" src="@imgSrc" style="width:100%" />
            </div>
            <div class="col-md-7 ftco-animate pr-md-5 order-md-first">
                <div class="row">
                    <div class="col-md-12 nav-link-wrap mb-5">
                        <div class="nav ftco-animate nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link active" id="v-pills-whatwedo-tab" data-toggle="pill" href="#v-pills-whatwedo" role="tab" aria-controls="v-pills-whatwedo" aria-selected="true">Vizyonumuz</a>
                            <a class="nav-link" id="v-pills-mission-tab" data-toggle="pill" href="#v-pills-mission" role="tab" aria-controls="v-pills-mission" aria-selected="false">Misyonumuz</a>
                        </div>
                    </div>
                    <div class="col-md-12 d-flex align-items-center">

                        <div class="tab-content ftco-animate" id="v-pills-tabContent">

                            <div class="tab-pane fade show active" id="v-pills-whatwedo" role="tabpanel" aria-labelledby="v-pills-whatwedo-tab">
                                <div>
                                    <div class="oval">
                                        <div class="services">
                                            <div class="icon d-flex justify-content-center align-items-center">
                                                <span class="dentalicon-001-tooth"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <p>@aboutUs.Vision</p>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-mission" role="tabpanel" aria-labelledby="v-pills-mission-tab">
                                <div>
                                    <div class="oval">
                                        <div class="services">
                                            <div class="icon d-flex justify-content-center align-items-center">
                                                <span class="dentalicon-001-tooth"></></span>
                                            </div>
                                        </div>
                                    </div>
                                    <p>@aboutUs.Mission</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>







