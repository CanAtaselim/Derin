@{
    AboutUsVM aboutUs = ViewBag.AboutUs;
}

@{
    var base64 = Convert.ToBase64String(aboutUs.Picture);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h2>Hakkımızda</h2>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================About Area =================-->
<section class="about_area p_120">
    <div class="container">
        <div class="row about_inner">
            <div class="col-lg-6">
                <div class="ab_left_text" style="margin-top:0px">
                    <h4>Misyonumuz</h4>
                    <p>@aboutUs.Mission</p>
                    <h4>Visyonumuz</h4>
                    <p>@aboutUs.Vision</p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="ab_img">
                    <img class="img-fluid" src="@imgSrc" alt="">
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End About Area =================-->

<!--================End Counter Area =================-->
<section class="clients_logo_area p_120">
    <div class="container">
        <div class="clients_slider owl-carousel">
            <div class="item">
                <img src="~/frontend/img/clients-logo/c-logo-1.png" alt="">
            </div>
            <div class="item">
                <img src="~/frontend/img/clients-logo/c-logo-2.png" alt="">
            </div>
            <div class="item">
                <img src="~/frontend/img/clients-logo/c-logo-3.png" alt="">
            </div>
            <div class="item">
                <img src="~/frontend/img/clients-logo/c-logo-4.png" alt="">
            </div>
            <div class="item">
                <img src="~/frontend/img/clients-logo/c-logo-5.png" alt="">
            </div>
        </div>
    </div>
</section>
<!--================End Clients Logo Area =================-->
