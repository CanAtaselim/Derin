                                <input type="text" class="form-control" id="appointment_name" placeholder="Ad">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input type="text" class="form-control" id="appointment_surname" placeholder="Soyad">
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="form-group">
                                <input type="text" class="form-control" id="appointment_email" placeholder="E-Posta">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input type="text" class="form-control" id="phone" placeholder="Telefon">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input type="text" class="form-control appointment_date" placeholder="Tarih">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input type="text" class="form-control appointment_time" placeholder="Saat">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <textarea name="your-message" style="height:100px!important" class="form-control" placeholder="Mesajınız"></textarea>
                            </div>
                        </div>

                    </div>
                    <input style="border-radius:2px!important; font-size:14px" type="submit" value="Gönder" class="btn btn-light py-2 px-4">
                </form>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-services">
    <div class="container">

        <div class="row">
            @try
            {
                foreach (ServicesVM item in services)
                {
                    <div class="col-lg-3 d-flex ftco-animate" data-toggle="modal" data-target="#services@(item.IdServices) " style="cursor:pointer; padding-left:10px; padding-right:10px;">
                        <div class="staff" style="padding-left:12px; padding-right:12px;">
                            <div class="media block-6 services d-block text-center" style="margin-bottom:0px">
                                <div class="icon d-flex justify-content-center align-items-center">
                                    <span class="@item.Icon"></span>
                                </div>
                                <div class="media-body p-">
                                    <h3 class="heading">
                                        @item.Title
                                    </h3>
                                    @{
                                        string FullText = item.FullText;
                                        if (item.FullText.Length > 211)
                                        {
                                            var parts = item.FullText.Substring(0, 210).Split(' ');
                                            FullText = string.Join(" ", parts.Take(parts.Length - 1)) + "...";

                                        }
                                        <span>@Html.Raw(FullText)</span> <br />
                                        <span style="color:#00aeef; font-size:12px">daha fazlası için tıklayınız..</span>

                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="modal fade" id="services@(item.IdServices)" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-body">

                                    <div class="staff" style="padding-left:12px; padding-right:12px;">
                                        <div class="media block-6 services d-block text-center" style="margin-bottom:0px">
                                            <div class="icon d-flex justify-content-center align-items-center">
                                                <span class="@item.Icon"></span>
                                            </div>
                                            <div class="media-body p-">
                                                <h3 class="heading">
                                                    @item.Title
                                                </h3>
                                                <span>@item.FullText</span> <br />

                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            }
            catch (Exception ex)
            {

            }
        </div>
    </div>
    @try
    {
        @if (talent.Count > 0)
        {
            <div class="container-wrap mt-5">
                <div class="row d-flex no-gutters">
                    <div class="col-md-6 img" style="background-image: url('/frontend/images/about-2.jpg');">
                    </div>
                    <div class="col-md-6 d-flex">
                        <div class="about-wrap">
                            @foreach (var item in talent)
                            {
                                <div class="list-services d-flex ftco-animate">
                                    <div class="icon d-flex justify-content-center align-items-center">
                                        <span class="icon-check2"></span>
                                    </div>
                                    <div class="text">
                                        <h3>@item.Title</h3>
                                        <p>@item.Description</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    catch (Exception ex)
    {

    }


</section>


