@model BannerVM
@{
    Layout = "~/Views/Shared/_AjaxLayout.cshtml";
}
@section pageLevelInlineScripts {

}
@section pageLevelStyles {
}
@section pageLevelInlineStyles {

}
@section pageLevelPlugins {
    <script src="~/admin/banner/edit.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


}
<div class="kt-portlet">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="fa fa-images"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                Banner
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-actions">
                <button type="button" class="btn btn-success btn-elevate btn-elevate-air btnSave"><i class="fa fa-save"></i>Kaydet</button>
            </div>
        </div>
    </div>
    <form novalidate id="submit_form" class="horizontal-form" enctype="multipart/form-data">
        <input type="hidden" asp-for="IdBanner" />
        <input type="hidden" asp-for="FileName" />
        <input type="hidden" asp-for="FilePath" />

        <div class="kt-portlet__body">
            <div class="form-group row">
                <label class="col-2 col-form-label">Açıklama:</label>
                <div class="col-6">
                    <input asp-for="Description" maxlength="20" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-2 col-form-label">Görsel:</label>
                <div class="col-10">
                    <label class="btn btn-twitter btn-elevate" style="margin-bottom:0px; cursor:pointer" for="bannerFile"><i class="fa fa-upload"></i>Fotoğraf yüklemek için tıklayınız.</label>
                    <input type="file" name="files" id="bannerFile" accept="image/png,image/jpg,image/jpeg">
                </div>
            </div>
            <div class="form-group row imageDiv d-none">
                <label class="col-2 col-form-label"></label>
                <div class="col-10">

                    <img alt="" id="bannerImage" class="img-thumbnail" style="max-height:500px" />

                </div>
            </div>

            <div class="form-group row">
                <label class="col-2 col-form-label"></label>
                <div class="col-6">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
        </div>
        <div class="kt-portlet__foot">
            <div class="row">
                <div class="col-lg-12">
                    <button type="button" class="btn btn-success btn-elevate btn-elevate-air btnSave"><i class="fa fa-save"></i>Kaydet</button>
                </div>
            </div>
        </div>
    </form>

</div>


