@using Derin.Business.ViewModel.Administration
@{
    ContactUsVM contactUs = ViewBag.ContactUs;
    AboutUsVM aboutUs = ViewBag.AboutUs;
}
<footer class="footer-area p_120">
    <div class="container">
        <div class="row">
            <div class="col-lg-7  col-md-12 col-sm-12">
                <h6 class="footer_title">Misyonumuz</h6>

                @{
                    if (aboutUs != null)
                    {
                        string about = aboutUs.Mission.Length > 300 ? aboutUs.Mission.Substring(0, 299) : aboutUs.Mission;
                        <p>
                            @about ...
                        </p>
                    }

                }
            </div>
            <div class="col-lg-5 col-md-12 col-sm-12">
                <div class="single-footer-widget contact_wd">
                    <h6 class="footer_title">İletişim</h6>
                    <p>@contactUs.Address</p>
                    <p>@contactUs.Phone</p>
                    <p>@contactUs.GSM</p>
                    <p>@contactUs.Email</p>

                </div>
            </div>

        </div>
        <div class="row footer-bottom d-flex justify-content-between align-items-center">
            <p class="col-lg-8 col-md-8 footer-text m-0">
                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                Copyright &copy;
                <script>document.write(new Date().getFullYear());</script> Tüm Hakları Saklıdır
                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
            </p>

        </div>
    </div>
</footer>

